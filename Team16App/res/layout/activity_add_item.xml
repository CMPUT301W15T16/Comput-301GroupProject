<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.cs.group_travelexpenseapp.AddExpenses" >

    <EditText
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Item name" />

    <EditText
        android:id="@+id/expensedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/itemName"
        android:layout_alignRight="@+id/itemName"
        android:layout_below="@+id/itemName"
        android:ems="10"
        android:hint="Expense Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/expensedate"
        android:layout_below="@+id/expensedate"
        android:ems="10"
        android:hint="Category" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/expensedescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Category"
        android:layout_alignRight="@+id/Category"
        android:layout_below="@+id/Category"
        android:ems="10"
        android:gravity="left|top"
        android:hint="Expense Description"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/amountspent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expensedescription"
        android:layout_alignRight="@+id/expensedescription"
        android:layout_below="@+id/expensedescription"
        android:ems="10"
        android:hint="Amount Spent"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amountspent"
        android:layout_alignRight="@+id/amountspent"
        android:layout_below="@+id/amountspent"
        android:ems="10"
        android:hint="Currency" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/currency"
        android:layout_below="@+id/currency"
        android:text="Incomplete item" />

    <Button
        android:id="@+id/addimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkBox1"
        android:layout_marginTop="32dp"
        android:text="Attach Reciept" />

    <Button
        android:id="@+id/updateexpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/addimg"
        android:layout_below="@+id/addimg"
        android:layout_marginTop="29dp"
        android:text="Update" />

    <Button
        android:id="@+id/deleteexpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/updateexpense"
        android:layout_alignBottom="@+id/updateexpense"
        android:layout_alignLeft="@+id/addimg"
        android:text="Delete" />

</RelativeLayout>
