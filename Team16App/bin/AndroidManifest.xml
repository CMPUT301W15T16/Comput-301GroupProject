        <activity
            android:name=".ExpenseListActivity"
            android:label="@string/title_activity_expense_list" >
        </activity>
        <activity
            android:name=".AddExpenseActivity"
            android:label="@string/title_activity_add_expense" >
        </activity>
        <activity
            android:name=".ClaimInfoActivity"
            android:label="@string/title_activity_claim_info" >
        </activity>
        <activity
            android:name=".AddPhotoActivity"
            android:label="@string/title_activity_add_receipt_photo" >
